{%extends 'layout.njk'%}

{%block head%}
<title>Foodfy</title>
{%endblock%}

{%block content%}
<section class="content2">
    <div class="cards">
        {%for item in items%}
        <div class="card" id="{{item.id}}">
            <img src="/{{item.id}}.png" alt="{{item.id}}">
            <h3>{{item.title}}</h3>
            <h4>{{item.author}}</h4>
        </div>
        {%endfor%}
    </div>
</section>
<script src="/scripts.js"></script>
{%endblock%}