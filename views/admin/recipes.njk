{%extends 'admin/layout.njk'%}

{%block head%}
<title>Foodfy</title>
{%endblock%}

{%block styles%}
<link rel="stylesheet" href="/admin.css">
{%endblock%}

{%block content%}
<h2>Recipe Management</h2>
<section class="content2">
    <div class="cards">
        {%for item in items%}
            <div class="card" id="{{item.id}}">
                <div>
                    <img src="/{{item.id}}.png" alt="{{item.id}}">
                </div>
                <div>
                    <h3>{{item.title}}</h3>
                    <h4>by {{item.author}}</h4>
                </div>
            </div>
        {%endfor%}
    </div>
</section>
<script src="/scripts.js"></script>
{%endblock%}