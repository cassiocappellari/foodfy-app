{%extends 'admin/layout.njk'%}

{%block head%}
<title>Foodfy</title>
{%endblock%}

{%block styles%}
<link rel="stylesheet" href="/admin.css">
{%endblock%}

{%block content%}

<section class="create-form">
    <form action="/admin/recipes?_method=PUT" method="POST">
        <div class="form-header">
            <div>
                <h2>Create Recipe</h2>
            </div>
            <div id="button">
                <button type="submit">Save Recipe</button>
            </div>
        </div>
        <div class="item">
            <div>Recipe Image</div>
            <div>
                <input
                    type="text"
                    name="recipeImg"
                    placeholder="http://"
                    value="{{recipe.recipeImg}}"
                >
            </div>
        </div>
        <div class="item">
            <div>Recipe Name</div>
            <div>
                <input
                    type="text"
                    name="recipeName"
                    value="{{recipe.recipeName}}"
                >
            </div>
        </div>
        <div class="item">
            <div>Recipe Author</div>
            <div>
                <input
                    type="text"
                    name="recipeAuthor"
                    value="{{recipe.recipeAuthor}}"
                >
            </div>
        </div>
        <div class="item">
            <div>Ingredients</div>
            <div id="ingredients">
                <div class="ingredient">
                    {%for ingredient in recipe.recipeIngredients%}
                        <input
                            type="text"
                            name="recipeIngredients[]"
                            value="{{ingredient}}"
                        >
                    {%endfor%}
                </div>
            </div>
            <button type="button" class="add-ingredient">
                Add new ingredient
            </button>
        </div>
        <div class="item">
            <div>Prepare Time (minutes)</div>
            <div>
                <input
                    type="text"
                    name="recipeTime"
                    value="{{recipe.recipeTime}}"
                >
            </div>
        </div>
        <div class="item">
            <div>Recipe Prepare</div>
            <div id="preps">
                <div class="prep">
                    {%for prep in recipe.recipePrep%}
                        <input
                            type="text"
                            name="recipePrep[]"
                            value="{{prep}}"
                        >
                    {%endfor%}
                </div>
            </div>
            <button type="button" class="add-prep">
                Add new step
            </button>
        </div>
        <div class="item">
            <div>
                <div>
                    <label for="recipeInfo">Additional Information</label>
                </div>
                <textarea 
                    name="recipeInfo"
                >
                {{recipe.recipeInfo}}
                </textarea>
            </div>
        </div>
        <input
            type="hidden"
            name="id"
            value={{recipe.id}}
        >
    </form>
</section>
<script src="/admin/scripts.js"></script>
{%endblock%}