{%extends 'admin/layout.njk'%}

{%block head%}
<title>Foodfy</title>
{%endblock%}

{%block styles%}
<link rel="stylesheet" href="/details.css">
<link rel="stylesheet" href="/admin.css">
{%endblock%}

{%block content%}
<section class="content">
    <div class="details-header">
        <div>
            <h2>Recipe: {{recipe.recipeName}}</h2>
        </div>
        <div id="button">
            <a type="button" href="/admin/recipes/{{recipe.id}}/edit">Edit Recipe</a>
            <button></button>
        </div>
    </div>
    <div class="recipes">
            <div class="recipe-card" id="{{recipe.id}}">
                <img src="{{recipe.recipeImg}}" alt="{{recipe.recipeName}}">
                <h2>{{recipe.recipeName}}</h2>
                <h4>by {{recipe.recipeAuthor}}</h4>
            </div>
            <div class="recipes-content">
                <div class="recipe-ingredients">
                    <h3>Ingredients</h3>
                    <ul>
                    {%for ingredient in recipe.recipeIngredients%}
                        <li>{{ingredient}}</li>
                    {%endfor%}
                    </ul>
                </div>
                <div class="recipe-preparation">
                    <h3>How To Prepare</h3>
                    <ul>
                    {%for prep in recipe.recipePrep%}
                        <li>{{prep}}</li>
                    {%endfor%}
                    </ul>
                </div>
                <div class="recipe-information">
                    <h3>Additional Information</h3>
                    <p>{{recipe.recipeInfo}}</p>
                </div>
            </div>
    </div>
</section>
<script src="/admin/scripts.js"></script>
{%endblock%}