{%extends 'admin/layout.njk'%}

{%block head%}
<title>Foodfy</title>
{%endblock%}

{%block styles%}
<link rel="stylesheet" href="/admin.css">
{%endblock%}

{%block content%}

<section class="create-form">
    <form action="/admin/recipes" method="POST">
        <div class="form-header">
            <div>
                <h2>Create Recipe</h2>
            </div>
            <div id="button">
                <button type="submit">Save Recipe</button>
            </div>
        </div>
        <div class="item">
            <div>Recipe Image</div>
            <div>
                <input
                    type="text"
                    name="recipeImg"
                    placeholder="http://"
                    value="{{recipes.recipeImg}}"
                >
            </div>
        </div>
        <div class="item">
            <div>Ingredients</div>
            <div id="ingredients">
                <div class="ingredient">
                    <input
                        type="text"
                        name="ingredients[]"
                        value="{{recipes.ingredients}}"
                    >
                </div>
            </div>
            <button type="button" class="add-ingredient">
                Add new ingredient
            </button>
        </div>
        <div class="item">
            <div>Recipe Prepare</div>
            <div id="preps">
                <div class="prep">
                    <input
                        type="text"
                        name="recipePrep[]"
                        value="{{recipes.recipePrep}}"
                    >
                </div>
            </div>
            <button type="button" class="add-prep">
                Add new step
            </button>
        </div>
        <div class="item">
            <div>Additional Information</div>
            <div>
                <textarea 
                    name="addInfo"
                    cols="30" 
                    rows="5"
                >
                </textarea>
            </div>
        </div>
    </form>
</section>
<script src="/admin/scripts.js"></script>
{%endblock%}