{%extends 'users/layout.njk'%}

{%block head%}
<title>Foodfy</title>
{%endblock%}

{%block styles%}
<link rel="stylesheet" href="/home.css">
{%endblock%}

{%block content%}
<section class="content1">
    <div class="content">
        <h1>The Best Recipes</h1>
        <p>Learn how to build the best dishes with recipes created by professionals from all over the world.</p>
    </div>
    <div class="img-background">
        <img src="/main-logo.svg" alt="Chef Foodfy">
    </div>
</section>
<section class="content2">
    <h2>Our Recipes</h2>
    <div class="cards">
        {%for item in items%}
        <div class="card" id="{{item.id}}">
            <img src="/{{item.id}}.png" alt="{{item.id}}">
            <div class="preparation-time">{{item.time}}</div>
            <h3>{{item.title}}</h3>
            <h4>by {{item.author}}</h4>
        </div>
        {%endfor%}
</section>
<script src="/users/scripts.js"></script>
{%endblock%}